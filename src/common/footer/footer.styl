.footer
  text: $color__white 14px 16px
  padding: 70px false 40px
  
  a
    link: white
    
  p
    margin: 16px false
    
  &__item
    padding-right: 20px
    
    &:last-child
      padding-right: 0px
        
    &--contacts
    &--about
      max-width: 210px
      
    &--about
      position: relative
      top: -16px
      
    &--navigation
    &--contacts
      position: relative
      
      .heading
        position: relative
        
    &--navigation
      left: -20px
      
      .heading
        left: 20px
        
    &--contacts
      left: -30px
      
      .heading
        left: 30px