.form
  
  &__title
  &__item
    display: block 100% false
    margin-bottom: 20px
    
    &:last-child
      margin-bottom: 0px
  
  &__title
    text: medium 24px 28px
    
    &--request
      background: left center
      padding-left: 46px
      height: 37px
      
      &:after
        display: inline-block 0px 37px ''
        vertical-align: bottom
      
    &--request
      background: url('img/request.png')
      
  &__item
    
    &--right
      text: right