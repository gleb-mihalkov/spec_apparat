link($type)
  
  $color = $color__blue
  $color--hover = $color__blue--dark
  $color--active = darken($color__blue, 20%)
  
  if $type is black
    $color = $color__black
    $color--hover = $color__blue
    $color--active = $color__blue--dark
    
  if $type is white
    $color = $color__white
    $color--hover = $color__yellow
    $color--active = darken($color__yellow, 20%)
  
  text: $color
  
  &:hover
    text: $color--hover
    
  &:active
    text: $color--active